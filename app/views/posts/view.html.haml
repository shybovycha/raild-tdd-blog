%h1 
    = @post.title

.post-body
    != @post.body

    %a{ :class => 'add-comment', :onclick => 'return false;', :href => '#' }
        Add comment

    .add-comment
        .form-container
            %form{ :action => '#', :onsubmit => 'return false;', :method => 'post' }
                %input{ :type => 'hidden', :name => 'post_id', :value => @post.id }
                %input{ :type => 'text', :name => 'comment[author]', :placeholder => 'Your name' }
                %textarea{ :name => 'comment[body]', :placeholder => 'Your message' }
                %input{ :type => 'button', :value => 'Create comment', :class => 'submit-button' }
                %input{ :type => 'button', :value => 'Cancel', :class => 'cancel-button' }

    .comments
        = render :partial => 'comments'